# Database
DB_USER=accounting
DB_PASSWORD=secret
DB_NAME=accounting
DATABASE_USER=accounting
DATABASE_PASSWORD=secret
DATABASE_NAME=accounting
DATABASE_HOST=localhost
DATABASE_PORT=5432

# JWT
JWT_SECRET=your-jwt-secret-key-min-32-chars-long-here
AUTH_SECRET=your-auth-secret

# Auth.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# OAuth (可选)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Authelia (可选)
AUTHELIA_URL=http://localhost:9090
AUTHELIA_API_KEY=

# API
NEXT_PUBLIC_API_URL=http://localhost:3001

# CORS
CORS_ORIGIN=http://localhost:3000

# Node Environment
NODE_ENV=development

# ============================================================================
# System Initialization (First-time setup only)
# ============================================================================
# Required for initial system setup. Create admin user when database is empty.
# IMPORTANT: After initialization, this secret can be removed or changed.
# The system will return 409 if already initialized, 403 if secret is invalid.
INIT_SECRET=your-secure-random-secret-key-min-32-chars
